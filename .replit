# PatchHive Replit Configuration
# This file tells Replit how to run your application

# Main entry point - starts both backend and frontend
run = "bash start.sh"

# Deployment configuration
[deployment]
run = ["sh", "-c", "bash start.sh"]

# Environment setup
[env]
PYTHON_LD_LIBRARY_PATH = "/nix/store/zcqgfzd32v7r2c5cqs9xk8m4ddxjlzaz-python3-3.11.4/lib"

# Language configuration
[nix]
channel = "stable-23_11"

# Port configuration
[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 3000

# Language server configuration
[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

# Unit tests
[unitTest]
language = "python3"

# Auto-install dependencies
[packager]
language = "python3"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true
