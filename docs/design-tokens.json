{
  "$schema": "https://design-tokens.github.io/community-group/format/schema.json",
  "patchhive": {
    "color": {
      "primary": {
        "cyan": {
          "$type": "color",
          "$value": "#7FF7FF",
          "$description": "Primary accent color, links, highlights"
        },
        "black": {
          "$type": "color",
          "$value": "#020407",
          "$description": "Primary background color"
        },
        "magenta": {
          "$type": "color",
          "$value": "#FF1EA0",
          "$description": "Secondary accent, warnings, CTAs"
        },
        "green": {
          "$type": "color",
          "$value": "#00FF88",
          "$description": "Success states, active indicators"
        }
      },
      "grayscale": {
        "near-black": {
          "$type": "color",
          "$value": "#0A0E14",
          "$description": "Secondary background"
        },
        "dark-gray": {
          "$type": "color",
          "$value": "#1C2128",
          "$description": "Card backgrounds, panels"
        },
        "mid-gray": {
          "$type": "color",
          "$value": "#3D4450",
          "$description": "Borders, dividers"
        },
        "light-gray": {
          "$type": "color",
          "$value": "#8B92A0",
          "$description": "Secondary text, disabled states"
        },
        "off-white": {
          "$type": "color",
          "$value": "#E8ECF0",
          "$description": "Body text on dark backgrounds"
        }
      },
      "semantic": {
        "success": {
          "$type": "color",
          "$value": "#00FF88"
        },
        "warning": {
          "$type": "color",
          "$value": "#FFB800"
        },
        "error": {
          "$type": "color",
          "$value": "#FF1EA0"
        },
        "info": {
          "$type": "color",
          "$value": "#7FF7FF"
        }
      },
      "opacity": {
        "cyan-10": {
          "$type": "color",
          "$value": "rgba(127, 247, 255, 0.1)"
        },
        "cyan-20": {
          "$type": "color",
          "$value": "rgba(127, 247, 255, 0.2)"
        },
        "cyan-40": {
          "$type": "color",
          "$value": "rgba(127, 247, 255, 0.4)"
        },
        "cyan-60": {
          "$type": "color",
          "$value": "rgba(127, 247, 255, 0.6)"
        },
        "magenta-10": {
          "$type": "color",
          "$value": "rgba(255, 30, 160, 0.1)"
        },
        "magenta-20": {
          "$type": "color",
          "$value": "rgba(255, 30, 160, 0.2)"
        },
        "magenta-40": {
          "$type": "color",
          "$value": "rgba(255, 30, 160, 0.4)"
        },
        "magenta-60": {
          "$type": "color",
          "$value": "rgba(255, 30, 160, 0.6)"
        }
      }
    },
    "typography": {
      "fontFamily": {
        "mono": {
          "$type": "fontFamily",
          "$value": ["JetBrains Mono", "Fira Code", "Courier New", "monospace"]
        },
        "fallback": {
          "$type": "fontFamily",
          "$value": ["system-ui", "-apple-system", "sans-serif"]
        }
      },
      "fontSize": {
        "display": {
          "$type": "dimension",
          "$value": "48px"
        },
        "h1": {
          "$type": "dimension",
          "$value": "32px"
        },
        "h2": {
          "$type": "dimension",
          "$value": "24px"
        },
        "h3": {
          "$type": "dimension",
          "$value": "20px"
        },
        "h4": {
          "$type": "dimension",
          "$value": "18px"
        },
        "body": {
          "$type": "dimension",
          "$value": "14px"
        },
        "body-small": {
          "$type": "dimension",
          "$value": "12px"
        },
        "caption": {
          "$type": "dimension",
          "$value": "10px"
        }
      },
      "fontWeight": {
        "regular": {
          "$type": "fontWeight",
          "$value": "400"
        },
        "medium": {
          "$type": "fontWeight",
          "$value": "500"
        },
        "semibold": {
          "$type": "fontWeight",
          "$value": "600"
        },
        "bold": {
          "$type": "fontWeight",
          "$value": "700"
        }
      },
      "lineHeight": {
        "tight": {
          "$type": "number",
          "$value": 1.1
        },
        "snug": {
          "$type": "number",
          "$value": 1.2
        },
        "normal": {
          "$type": "number",
          "$value": 1.5
        },
        "relaxed": {
          "$type": "number",
          "$value": 1.6
        }
      },
      "letterSpacing": {
        "tight": {
          "$type": "dimension",
          "$value": "-0.05em"
        },
        "normal": {
          "$type": "dimension",
          "$value": "0"
        },
        "wide": {
          "$type": "dimension",
          "$value": "0.05em"
        },
        "wider": {
          "$type": "dimension",
          "$value": "0.1em"
        },
        "widest": {
          "$type": "dimension",
          "$value": "0.15em"
        }
      }
    },
    "spacing": {
      "xs": {
        "$type": "dimension",
        "$value": "4px"
      },
      "sm": {
        "$type": "dimension",
        "$value": "8px"
      },
      "md": {
        "$type": "dimension",
        "$value": "16px"
      },
      "lg": {
        "$type": "dimension",
        "$value": "24px"
      },
      "xl": {
        "$type": "dimension",
        "$value": "32px"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "48px"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "64px"
      },
      "4xl": {
        "$type": "dimension",
        "$value": "96px"
      }
    },
    "borderRadius": {
      "none": {
        "$type": "dimension",
        "$value": "0"
      },
      "sm": {
        "$type": "dimension",
        "$value": "2px"
      },
      "md": {
        "$type": "dimension",
        "$value": "4px"
      },
      "lg": {
        "$type": "dimension",
        "$value": "8px"
      },
      "full": {
        "$type": "dimension",
        "$value": "9999px"
      }
    },
    "borderWidth": {
      "none": {
        "$type": "dimension",
        "$value": "0"
      },
      "thin": {
        "$type": "dimension",
        "$value": "1px"
      },
      "medium": {
        "$type": "dimension",
        "$value": "2px"
      },
      "thick": {
        "$type": "dimension",
        "$value": "4px"
      }
    },
    "shadow": {
      "sm": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0",
          "color": "rgba(127, 247, 255, 0.1)"
        }
      },
      "md": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "4px",
          "blur": "8px",
          "spread": "0",
          "color": "rgba(127, 247, 255, 0.15)"
        }
      },
      "lg": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "8px",
          "blur": "16px",
          "spread": "0",
          "color": "rgba(127, 247, 255, 0.2)"
        }
      },
      "xl": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "16px",
          "blur": "32px",
          "spread": "0",
          "color": "rgba(127, 247, 255, 0.25)"
        }
      },
      "glow-cyan": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "0",
          "blur": "20px",
          "spread": "0",
          "color": "rgba(127, 247, 255, 0.5)"
        }
      },
      "glow-magenta": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "0",
          "blur": "20px",
          "spread": "0",
          "color": "rgba(255, 30, 160, 0.5)"
        }
      },
      "glow-intense": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0",
          "offsetY": "0",
          "blur": "40px",
          "spread": "0",
          "color": "rgba(127, 247, 255, 0.8)"
        }
      }
    },
    "duration": {
      "instant": {
        "$type": "duration",
        "$value": "0ms"
      },
      "fast": {
        "$type": "duration",
        "$value": "150ms"
      },
      "normal": {
        "$type": "duration",
        "$value": "300ms"
      },
      "slow": {
        "$type": "duration",
        "$value": "500ms"
      },
      "reveal": {
        "$type": "duration",
        "$value": "800ms"
      }
    },
    "cubicBezier": {
      "ease-out": {
        "$type": "cubicBezier",
        "$value": [0.0, 0.0, 0.2, 1]
      },
      "ease-in-out": {
        "$type": "cubicBezier",
        "$value": [0.4, 0.0, 0.2, 1]
      },
      "spring": {
        "$type": "cubicBezier",
        "$value": [0.34, 1.56, 0.64, 1]
      }
    },
    "size": {
      "button": {
        "small": {
          "height": {
            "$type": "dimension",
            "$value": "32px"
          },
          "paddingX": {
            "$type": "dimension",
            "$value": "16px"
          },
          "paddingY": {
            "$type": "dimension",
            "$value": "8px"
          }
        },
        "medium": {
          "height": {
            "$type": "dimension",
            "$value": "40px"
          },
          "paddingX": {
            "$type": "dimension",
            "$value": "24px"
          },
          "paddingY": {
            "$type": "dimension",
            "$value": "12px"
          }
        },
        "large": {
          "height": {
            "$type": "dimension",
            "$value": "48px"
          },
          "paddingX": {
            "$type": "dimension",
            "$value": "32px"
          },
          "paddingY": {
            "$type": "dimension",
            "$value": "16px"
          }
        }
      },
      "input": {
        "height": {
          "$type": "dimension",
          "$value": "40px"
        },
        "paddingX": {
          "$type": "dimension",
          "$value": "16px"
        },
        "paddingY": {
          "$type": "dimension",
          "$value": "12px"
        }
      },
      "icon": {
        "small": {
          "$type": "dimension",
          "$value": "16px"
        },
        "medium": {
          "$type": "dimension",
          "$value": "20px"
        },
        "large": {
          "$type": "dimension",
          "$value": "24px"
        }
      }
    },
    "breakpoint": {
      "xs": {
        "$type": "dimension",
        "$value": "0px"
      },
      "sm": {
        "$type": "dimension",
        "$value": "640px"
      },
      "md": {
        "$type": "dimension",
        "$value": "768px"
      },
      "lg": {
        "$type": "dimension",
        "$value": "1024px"
      },
      "xl": {
        "$type": "dimension",
        "$value": "1280px"
      }
    },
    "zIndex": {
      "base": {
        "$type": "number",
        "$value": 0
      },
      "dropdown": {
        "$type": "number",
        "$value": 100
      },
      "sticky": {
        "$type": "number",
        "$value": 200
      },
      "fixed": {
        "$type": "number",
        "$value": 300
      },
      "modal-backdrop": {
        "$type": "number",
        "$value": 400
      },
      "modal": {
        "$type": "number",
        "$value": 500
      },
      "popover": {
        "$type": "number",
        "$value": 600
      },
      "tooltip": {
        "$type": "number",
        "$value": 700
      }
    }
  }
}
